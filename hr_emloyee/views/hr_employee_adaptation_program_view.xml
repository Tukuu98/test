<record id="view_form_hr_employee_adaption_program" model="ir.ui.view">
    <field name="name">hr.employee.adaption.program.form</field>
    <field name="model">hr.employee.adaption.program</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="state"/>
            </group>
            <group>
                <field name="line_ids">
                    <tree>
                        <field name="task_id"/>
                        <field name="gui_job"/>
                        <field name="one_week"/>
                        <field name="two_week"/>
                        <field name="three_week"/>
                        <field name="four_week"/>
                        <field name="five_week"/>
                        <field name="six_week"/>
                    </tree>
                </field>
            </group>
        </form>
    </field>
</record>
<record id="view_tree_hr_employee_adaption_program" model="ir.ui.view">
    <field name="name">hr.employee.adaption.program.tree</field>
    <field name="model">hr.employee.adaption.program</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="employee_id"/>
            <field name="department_id"/>
            <field name="job_id"/>
            <field name="state"/>
        </tree>
    </field>
</record>